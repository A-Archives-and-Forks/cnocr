{
    "vocab_fp": "label_cn.txt",
    "img_folder": "data/images",

    "gpus": [0],
    "epochs": 40,
    "batch_size": 200,
    "num_workers": 12,
    "pin_memory": true,
    "optimizer": "adam",
    "learning_rate": 3e-3,
    "weight_decay": 0,
    "lr_scheduler": {
        "name": "multi_step",
        "milestones": [5, 10, 16, 22, 30],
        "gamma": 0.5
    },
    "precision": 16,
    "limit_train_batches": 1.0,
    "limit_val_batches": 1.0,
    "pl_checkpoint_monitor": "complete_match_epoch",
    "pl_checkpoint_mode": "max"
}
